<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:background="@drawable/black_border"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/amountToPay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/black_border"
                android:drawablePadding="8dp"
                android:hint="Amount to pay"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/amountPaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:background="@drawable/black_border"
                android:drawablePadding="8dp"
                android:hint="Amount paid"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Calculate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text500Euro"/>
                <TextView android:text=" bills of 500" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text200Euro"/>
                <TextView android:text=" bills of 200" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text100Euro"/>
                <TextView android:text=" bills of 100" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text50Euro"/>
                <TextView android:text=" bills of 50" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text20Euro"/>
                <TextView android:text=" bills of 20" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text10Euro"/>
                <TextView android:text=" bills of 10" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text5Euro"/>
                <TextView android:text=" bills of 5" />
            </TableRow>

        </TableLayout>
        <TableLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text2Euro"/>
                <TextView android:text=" coins of 2" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text1Euro"/>
                <TextView android:text=" coins of 1" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text50EuroCent"/>
                <TextView android:text=" coins of .50" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text20EuroCent"/>
                <TextView android:text=" coins of .20" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text10EuroCent"/>
                <TextView android:text=" coins of .10" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text5EuroCent"/>
                <TextView android:text=" coins of .05" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text2EuroCent"/>
                <TextView android:text=" coins of .02" />
            </TableRow>

            <TableRow android:gravity="center">
                <TextView android:text="0" android:id="@+id/text1EuroCent"/>
                <TextView android:text=" coins of .01" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>